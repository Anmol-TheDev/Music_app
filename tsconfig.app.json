{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "es6"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": false,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "public",
    "eslint.config.js",
    "postcss.config.js",
    "tailwind.config.js",
    "vite.config.js",
    "vite.config.js.timestamp-*",
    "*.config.js",
    "*.config.ts",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
